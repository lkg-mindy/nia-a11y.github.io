---
// Starlight 기본 컴포넌트
import StarlightHead from "@astrojs/starlight/components/Head.astro";

// 공통 키워드 정의
const commonKeywords =
	"웹, 접근성, 콘텐츠, 제작기법, KWCAG2.2, accessibility, Korean, A11Y";

// Astro.props에서 keywords를 가져옵니다.
const { keywords } = Astro.props;

// keywords가 있으면 병합, 없으면 공통 키워드만 사용
let allKeywords = commonKeywords;
if (keywords) {
	allKeywords = `${commonKeywords}, ${keywords}`;
}
---

<!-- 원래 Head 컴포넌트 렌더링 -->
<StarlightHead {...Astro.props} />

<!-- 키워드 메타 태그 추가 -->
<meta name="keywords" content={allKeywords} />

<link rel="icon" href="/favicon.ico" />
<link rel="icon" type="image/png" href="/favicon.png" />
