---
// src/components/Image.astro
import { getImage } from "astro:assets";

interface Props {
	src: string;
	alt: string;
	[key: string]: any; // 다른 모든 속성(class, style 등)을 받을 수 있도록
}

const { src, alt, ...attrs } = Astro.props;

// public 폴더의 이미지 경로는 앞에 /가 없어야 합니다.
const imagePath = src.startsWith("/") ? src.slice(1) : src;

const finalSrc = `${import.meta.env.BASE_URL}${imagePath}`;
---

<img src={finalSrc} alt={alt} {...attrs} />
